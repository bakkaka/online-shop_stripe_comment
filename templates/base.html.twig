<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
        {% block stylesheets %}
            <style>
                .hover-shadow {
                    transition: all 0.3s ease;
                }
                .hover-shadow:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
                }
                .transition-all {
                    transition: all 0.3s ease;
                }
                .carousel-control-prev, .carousel-control-next {
                    width: 5%;
                }
                .sticky-top {
                    z-index: 1019;
                }
                .navbar-custom {
                    background-color: #131921 !important;
                }
                .search-btn {
                    background-color: #febd69;
                }
            </style>
        {% endblock %}
    </head>
    <body>
        {# Barre de navigation supérieure #}
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom py-2 sticky-top">
            <div class="container-fluid">
                {# Logo à gauche #}
                <a class="navbar-brand fw-bold fs-4" href="{{ path('app_home') }}">
                    <i class="bi bi-shop me-2"></i>MaBoutique
                </a>
                
                {# Bouton toggle pour mobile #}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                {# Contenu navbar #}
                <div class="collapse navbar-collapse" id="navbarContent">
                    {# Zone de recherche centrée #}
                    <form class="d-flex mx-lg-4 my-2 my-lg-0 flex-grow-1" role="search">
                        <div class="input-group">
                            <input class="form-control" type="search" placeholder="Rechercher des produits..." aria-label="Search">
                            <button class="btn search-btn" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                    
                    {# Liens à droite #}
                    <div class="d-flex">
                        {% if app.user %}
                            <div class="dropdown">
                                <a class="text-white text-decoration-none mx-3 d-flex align-items-center dropdown-toggle" 
                                   href="#" role="button" id="userDropdown" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-2"></i>{{ app.user.username }}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><a class="dropdown-item" href="{{ path('app_produit_new') }}">Admin</a></li>
                                    {% endif %}
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                                </ul>
                            </div>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="text-white text-decoration-none mx-3 d-flex align-items-center">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login
                            </a>
                            <a href="{{ path('app_register') }}" class="text-white text-decoration-none mx-3 d-flex align-items-center">
                                <i class="bi bi-person-plus me-2"></i>Register
                            </a>
                        {% endif %}
                        <a href="#" class="text-white text-decoration-none ms-3 d-flex align-items-center">
                            <i class="bi bi-cart3 fs-5 me-2"></i>Panier
                            <span class="badge bg-danger ms-1">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        {# Contenu principal #}
        <div class="container-fluid mt-3">
            {% block body %}{% endblock %}
        </div>
        
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>